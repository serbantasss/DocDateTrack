extends layout

block content
    main.container(role='main')
        .starter-template
            h1.mb-3= title

            if errors
                for error in errors
                    .alert.alert-warning.alert-dismissible.fade.show.col-4(role='alert')
                        | #{error.msg}
                        button.btn-close(type='button', data-bs-dismiss='alert', aria-label='Close')

            form.col-3(method='POST' action='')

                div.form-group.mt-2
                    label(for='name') First Name:
                    input#name.form-control(type='text', placeholder='' name='name' required='true' value=(undefined === category ? '' : category.name))

                div.form-group.mt-2
                    label(for='rel') Relation:
                    select#rel.form-control(type='select' placeholder='Select relation' name='rel')
                        option(value='' selected=(category == undefined )) none
                        for rel in relations
                            option(value=`${rel}` selected=(category != undefined && category.relation == rel)) #{rel}

                button.btn.btn-primary.mt-3(type='submit') Submit

