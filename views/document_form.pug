extends layout

block content

            h1.mb-3.mt-3=title

            if errors
                for error in errors
                    .alert.alert-warning.alert-dismissible.fade.show.col-4(role='alert')
                        | #{error.msg}
                        button.btn-close(type='button', data-bs-dismiss='alert', aria-label='Close')

            form.col-4(method='POST' action='')
                div.form-group.mt-2
                    label(for='owner') Owner:
                    select#owner.form-control(type='select', placeholder='Select owner' name='owner' required='true' )
                        for owner in owners
                            option(value=owner._id) #{owner.name}
                div.form-group.mt-2
                    label(for='category') Category:
                    select#category.form-control(type='select', placeholder='Select category' name='category' required='true' )
                        for category in categories
                            option(value=category._id) #{category.name}

                button.btn.btn-primary.mt-3(type='submit') Submit
